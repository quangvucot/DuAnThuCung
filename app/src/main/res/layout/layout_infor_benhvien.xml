<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="@drawable/bg_info_hospital_mo"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông Tin Bệnh Viện"
        android:textSize="30dp"
        android:fontFamily="@font/aicapnang"
        android:gravity="center"
        android:textColor="#977559"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:gravity="center|right"
            android:text="Tên Bệnh Viện: "
            android:fontFamily="@font/font_uvn_3"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvTTTenBV"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/font_uvn_3"
            android:textColor="#000000"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/font_uvn_3"
            android:textColor="#000000"
            android:text="Địa Chỉ: " />

        <TextView
            android:id="@+id/tvTTDiaDiemBV"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/font_uvn_3"
            android:textColor="#000000"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/font_uvn_3"
            android:textColor="#000000"
            android:text="Dịch Vụ: " />

        <TextView
            android:id="@+id/tvTTDichVuBV"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/font_uvn_3"
            android:textColor="#000000"
            android:text="" />

    </LinearLayout>


</LinearLayout>